{
    "builds": [
        {
            "src": "src/pages/**/*.{js,ts,jsx,tsx}",
            "use": "@vercel/next"
        },
        {
            "src": "src/api/**/*.ts",
            "use": "@vercel/node",
            "config": {
                "runtime": "nodejs18.x"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/src/api/$1"
        }
    ]
}